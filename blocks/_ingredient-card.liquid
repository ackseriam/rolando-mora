{%- comment -%}
  Tarjeta de ingrediente – estilo goPure
  Usada dentro del bloque _ingredients-carousel
{%- endcomment -%}

{% render 'ingredient-card-content', block: block %}

{% schema %}
{
  "name": "Tarjeta de ingrediente",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "category_label",
      "label": "Etiqueta de categoría",
      "default": "FÓRMULA CLÍNICA",
      "info": "p. ej. FÓRMULA CLÍNICA, EXTRACTO NATURAL"
    },
    {
      "type": "color",
      "id": "category_color",
      "label": "Color de la etiqueta de categoría",
      "default": "#8B9DC3"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen del ingrediente"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Nombre del ingrediente",
      "default": "Ingrediente"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Breve descripción del beneficio"
    }
  ],
  "presets": [
    {
      "name": "Tarjeta de ingrediente",
      "category": "t:categories.product"
    } 
  ]
}
{% endschema %}
