{% comment %}
  Product Carousel - Bundles (Shop Bundles)
  Replica of goPure Beauty homepage carousel
  Source: https://gopurebeauty.com
  Uses vanilla JS carousel (no Slick dependency)
{% endcomment %}

<style>
  .product-carousel-bundles {
    position: relative;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .product-carousel-bundles__container {
    max-width: 1200px;
    margin-inline: auto;
    padding-inline: var(--padding-md, 0.8rem);
  }

  .product-carousel-bundles__header {
    text-align: center;
    margin-bottom: var(--margin-2xl, 1.5rem);
  }

  .product-carousel-bundles__heading {
    font-family: 'Landour Regular Text';
    font-weight: 600;
    text-transform: uppercase;
    font-size: 40px;
    line-height: 1;
    color: {{ section.settings.heading_color }};
    margin: 0 0 var(--margin-5xl, 3rem);
  }

  @media (min-width: 992px) {
    .product-carousel-bundles__heading {
      font-size: var(--font-size--2xl, 1.5rem);
    }
  }

  .product-carousel-bundles__pre-heading {
    display: block;
    font-family: 'ivypresto-display';
    font-weight: 400;
    font-style: italic;
    text-transform: lowercase;
    font-size: 32px;
    line-height: 1.2;
    color: {{ section.settings.pre_heading_color }};
    margin-bottom: 0.25rem;
  }

  @media (min-width: 992px) {
    .product-carousel-bundles__pre-heading {
      font-size: var(--font-size--xl, 1.25rem);
    }
  }

  .product-carousel-bundles__wrapper {
    position: relative;
    margin-inline: -0.5rem;
  }

  .product-carousel-bundles__track-wrap {
    overflow: hidden;
  }

  .product-carousel-bundles__track {
    display: flex;
    gap: 24px;
    transition: transform 0.3s ease;
    will-change: transform;
  }

  .product-carousel-bundles__slide {
    flex: 0 0 var(--slide-width, 100%);
    min-width: 0;
  }

  .product-carousel-bundles__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.arrow_background }};
    border: 1px solid {{ section.settings.arrow_border }};
    border-radius: 50%;
    cursor: pointer;
    color: {{ section.settings.arrow_color }};
    transition: opacity 0.2s ease, background-color 0.2s ease;
  }

  .product-carousel-bundles__nav:hover:not(:disabled) {
    background: {{ section.settings.arrow_hover_background }};
    color: {{ section.settings.arrow_hover_color }};
  }

  .product-carousel-bundles__nav:disabled {
    opacity: 0.35;
    cursor: not-allowed;
  }

  .product-carousel-bundles__nav--prev {
    left: 0;
  }

  .product-carousel-bundles__nav--next {
    right: 0;
  }

  .product-carousel-bundles__nav svg {
    display: block;
    width: 24px;
    height: 24px;
  }

  .bundles-card {
    background-color: {{ section.settings.card_background_color }};
    border-radius: var(--style-border-radius-md, 0.8rem);
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: var(--padding-md, 0.8rem);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    transition: box-shadow 0.2s ease;
  }

  .bundles-card:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .bundles-card__title-wrap {
    margin-bottom: var(--padding-xs, 0.5rem);
    padding-bottom: var(--padding-xs, 0.5rem);
  }

  .bundles-card__title {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 600;
    font-size: var(--font-size--lg, 1.125rem);
    line-height: 1.25;
    margin: 0;
  }

  .bundles-card__title a {
    color: var(--color-foreground-heading, #000);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .bundles-card__title a:hover {
    color: var(--color-foreground-heading, #000);
    text-decoration: underline;
  }

  .bundles-card__caption {
    display: block;
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-size: var(--font-size--md, 1rem);
    font-weight: 400;
    color: {{ section.settings.caption_color }};
    margin-top: 0.2rem;
    line-height: 1.4;
  }

  .bundles-card__yotpo {
    margin-top: 0.5rem;
    min-height: 1.25rem;
  }

  .bundles-card__images {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: var(--style-border-radius-sm, 0.6rem);
    margin-bottom: 1rem;
    background: {{ section.settings.image_area_background }};
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .bundles-card__images a.bundles-card__images-link {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    inset: 0;
  }

  .bundles-card__hover-overlay {
    position: absolute;
    inset: 0;
    background: {{ section.settings.hover_overlay_color }};
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 3;
    border-radius: var(--style-border-radius-sm, 0.6rem);
  }

  .bundles-card__images:hover .bundles-card__hover-overlay {
    opacity: 1;
  }

  .bundles-card__learn-more {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 4;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem 1.25rem;
    background: {{ section.settings.learn_more_bg }};
    color: {{ section.settings.learn_more_color }};
    border: 2px solid {{ section.settings.learn_more_border }};
    border-radius: 4px;
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    text-decoration: none;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    pointer-events: auto;
  }

  .bundles-card__images:hover .bundles-card__learn-more {
    opacity: 1;
    visibility: visible;
  }

  .bundles-card__learn-more:hover {
    opacity: 0.9;
  }

  .bundles-card__img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
    transition: opacity 0.3s ease;
  }

  .bundles-card__img--primary {
    z-index: 1;
  }

  .bundles-card__img--secondary {
    z-index: 2;
    opacity: 0;
  }

  .bundles-card:hover .bundles-card__img--secondary {
    opacity: 1;
  }

  .bundles-card__images:has(.bundles-card__img--secondary):hover .bundles-card__img--primary {
    opacity: 0;
  }

  .bundles-card__img--single {
    opacity: 1;
  }

  .bundles-card__badge {
    position: absolute;
    z-index: 999999;
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 0.7rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    padding: 0.25rem 0.5rem;
    border-radius: 2px;
    margin-bottom: 0.5rem;
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_text_color }};
  }

  .bundles-card__badge--top {
    margin-bottom: 0.75rem;
  }

  .bundles-card__badge--category {
    margin-bottom: 0.5rem;
    background: {{ section.settings.badge_category_background }};
    color: {{ section.settings.badge_category_color }};
    max-width: 55%;
    height: 25px;
    font-weight: 600;
    text-align: center;
  }

  .bundles-card__price-wrap {
    margin-bottom: 0.75rem;
  }

  .bundles-card__price {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 600;
    font-size: var(--font-size--lg, 1.125rem);
    color: var(--color-foreground-heading, #000);
  }

  .bundles-card__compare-price {
    font-size: 0.9em;
    font-weight: 400;
    color: var(--color-foreground, #666);
    text-decoration: line-through;
    margin-left: 0.35rem;
  }

  .bundles-card__cta {
    display: none;
  }

  @media (max-width: 767px) {
    .product-carousel-bundles__nav {
      width: 36px;
      height: 36px;
    }
    .product-carousel-bundles__nav svg {
      width: 18px;
      height: 18px;
    }
  }
  .yotpo-bottom-line-scroll-panel .yotpo-sr-bottom-line-button{
    display: flex !important;
    flex-direction: row !important;
  }
</style>

<section
  class="product-carousel-bundles"
  data-section-id="{{ section.id }}"
  data-slides-desktop="{{ section.settings.slides_desktop }}"
  data-slides-tablet="{{ section.settings.slides_tablet }}"
  data-slides-mobile="{{ section.settings.slides_mobile }}"
  data-infinite="{{ section.settings.infinite }}"
  data-speed="{{ section.settings.speed }}"
  aria-label="{{ section.settings.aria_label | default: 'Shop Bundles' | escape }}"
>
  <div class="product-carousel-bundles__container">
    {%- if section.settings.show_heading -%}
      <header class="product-carousel-bundles__header">
        <h2 class="product-carousel-bundles__heading">
          {%- if section.settings.pre_heading != blank -%}
            <span class="product-carousel-bundles__pre-heading">{{ section.settings.pre_heading | escape }}</span>
          {%- endif -%}
          {{ section.settings.heading | escape }}
        </h2>
      </header>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="product-carousel-bundles__wrapper">
        <button
          type="button"
          class="product-carousel-bundles__nav product-carousel-bundles__nav--prev js-bundles-carousel-prev"
          aria-label="Previous slide"
          disabled
        >
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M0.40789 11.4079C0.0808754 11.7349 0.0808754 12.2651 0.40789 12.5921L5.73688 17.9211C6.0639 18.2481 6.59409 18.2481 6.9211 17.9211C7.24812 17.5941 7.24812 17.0639 6.9211 16.7369L2.18422 12L6.9211 7.26312C7.24812 6.9361 7.24812 6.40591 6.9211 6.0789C6.59409 5.75188 6.0639 5.75188 5.73688 6.0789L0.40789 11.4079ZM19 11.1626L1 11.1626L1 12.8374L19 12.8374L19 11.1626Z" fill="currentColor"/>
          </svg>
        </button>
        <button
          type="button"
          class="product-carousel-bundles__nav product-carousel-bundles__nav--next js-bundles-carousel-next"
          aria-label="Next slide"
        >
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M23.5921 12.5921C23.9191 12.2651 23.9191 11.7349 23.5921 11.4079L18.2631 6.0789C17.9361 5.75188 17.4059 5.75188 17.0789 6.0789C16.7519 6.40591 16.7519 6.9361 17.0789 7.26312L21.8158 12L17.0789 16.7369C16.7519 17.0639 16.7519 17.5941 17.0789 17.9211C17.4059 18.2481 17.9361 18.2481 18.2631 17.9211L23.5921 12.5921ZM5 12.8374L23 12.8374L23 11.1626L5 11.1626L5 12.8374Z" fill="currentColor"/>
          </svg>
        </button>

        <div class="product-carousel-bundles__track-wrap">
          <div class="product-carousel-bundles__track js-bundles-carousel-track">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'product' -%}
                  {%- assign product = block.settings.product -%}
                  {%- if product != blank -%}
                    <div class="product-carousel-bundles__slide" {{ block.shopify_attributes }}>
                      <div class="bundles-card">
                        {%- if block.settings.badge != blank -%}
                          <span class="bundles-card__badge bundles-card__badge--top">{{ block.settings.badge | escape }}</span>
                        {%- endif -%}

                        <div class="bundles-card__images">
                          <a href="{{ product.url }}" class="bundles-card__images-link" aria-label="{{ product.title | escape }}">
                            {%- if block.settings.hover_image != blank -%}
                              <img
                                class="bundles-card__img bundles-card__img--secondary"
                                src="{{ block.settings.hover_image | image_url: width: 600 }}"
                                alt="{{ block.settings.hover_image_alt | default: '' | escape }}"
                                width="300"
                                height="300"
                                loading="lazy"
                                srcset="{{ block.settings.hover_image | image_url: width: 300 }} 300w,
                                        {{ block.settings.hover_image | image_url: width: 600 }} 600w"
                                sizes="(max-width: 767px) 85vw, (max-width: 991px) 45vw, 325px"
                              >
                              <img
                                class="bundles-card__img bundles-card__img--primary"
                                src="{{ product.featured_image | image_url: width: 600 }}"
                                alt="{{ product.featured_image.alt | default: product.title | escape }}"
                                width="300"
                                height="300"
                                loading="lazy"
                                srcset="{{ product.featured_image | image_url: width: 300 }} 300w,
                                        {{ product.featured_image | image_url: width: 600 }} 600w"
                                sizes="(max-width: 767px) 85vw, (max-width: 991px) 45vw, 325px"
                              >
                            {%- else -%}
                              <img
                                class="bundles-card__img bundles-card__img--single bundles-card__img--primary"
                                src="{{ product.featured_image | image_url: width: 600 }}"
                                alt="{{ product.featured_image.alt | default: product.title | escape }}"
                                width="300"
                                height="300"
                                loading="lazy"
                                srcset="{{ product.featured_image | image_url: width: 300 }} 300w,
                                        {{ product.featured_image | image_url: width: 600 }} 600w"
                                sizes="(max-width: 767px) 85vw, (max-width: 991px) 45vw, 325px"
                              >
                            {%- endif -%}
                          </a>
                          <span class="bundles-card__hover-overlay" aria-hidden="true"></span>
                          <a href="{{ product.url }}" class="bundles-card__learn-more">
                            {{ block.settings.cta_text | default: 'Learn More' | escape }}
                          </a>
                        </div>

                        {%- if block.settings.badge_secondary != blank -%}
                          <span class="bundles-card__badges bundles-card__badge--category">{{ block.settings.badge_secondary | escape }}</span>
                        {%- endif -%}

                        <div class="bundles-card__title-wrap">
                          <h3 class="bundles-card__title">
                            <a href="{{ product.url }}">{{ product.title | escape }}</a>
                          </h3>
                          {%- if block.settings.caption != blank -%}
                            <span class="bundles-card__caption">{{ block.settings.caption | escape }}</span>
                          {%- endif -%}
                          <div
                            class="yotpo-widget-instance bundles-card__yotpo"
                            data-yotpo-instance-id="{{ section.settings.yotpo_instance_id | default: '1285830' }}"
                            data-yotpo-product-id="{{ product.id }}"
                            data-yotpo-cart-product-id="{{ product.id }}"
                            data-yotpo-section-id="{{ section.id }}"
                          ></div>
                        </div>

                        <div class="bundles-card__price-wrap">
                          <span class="bundles-card__price">
                            {{ product.price | money }}
                            {%- if product.compare_at_price > product.price -%}
                              <span class="bundles-card__compare-price">{{ product.compare_at_price | money }}</span>
                            {%- endif -%}
                          </span>
                        </div>
                      </div>
                    </div>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

<script>
  (function() {
    function initBundlesCarousel(sectionEl) {
      if (!sectionEl) return;
      var track = sectionEl.querySelector('.js-bundles-carousel-track');
      var prevBtn = sectionEl.querySelector('.js-bundles-carousel-prev');
      var nextBtn = sectionEl.querySelector('.js-bundles-carousel-next');
      var slides = track ? track.querySelectorAll('.product-carousel-bundles__slide') : [];
      var count = slides.length;
      if (count === 0) return;

      var slidesDesktop = parseInt(sectionEl.dataset.slidesDesktop || '3', 10);
      var slidesTablet = parseInt(sectionEl.dataset.slidesTablet || '2', 10);
      var slidesMobile = parseInt(sectionEl.dataset.slidesMobile || '1', 10);
      var infinite = sectionEl.dataset.infinite === 'true';
      var speed = parseInt(sectionEl.dataset.speed || '300', 10);

      var index = 0;
      var wrap = sectionEl.querySelector('.product-carousel-bundles__track-wrap');
      var trackWrapWidth = 0;

      function getSlidesToShow() {
        var w = window.innerWidth;
        if (w < 768) return slidesMobile;
        if (w < 992) return slidesTablet;
        return slidesDesktop;
      }

      function getSlideWidth() {
        if (!wrap) return 100;
        var toShow = getSlidesToShow();
        var gap = 24;
        var totalGap = (toShow - 1) * gap;
        return (wrap.offsetWidth - totalGap) / toShow;
      }

      function updateStyles() {
        var toShow = getSlidesToShow();
        var slideWidth = getSlideWidth();
        track.style.setProperty('--slide-width', slideWidth + 'px');
      }

      function maxIndex() {
        var toShow = getSlidesToShow();
        return Math.max(0, count - toShow);
      }

      function goTo(i) {
        var max = maxIndex();
        index = infinite ? ((i % (max + 1)) + (max + 1)) % (max + 1) : Math.max(0, Math.min(i, max));
        var slideWidth = getSlideWidth();
        var gap = 20;
        var gap = 24;
        var offset = -(index * (slideWidth + gap));
        track.style.transitionDuration = speed + 'ms';
        track.style.transform = 'translate3d(' + offset + 'px, 0, 0)';
        if (prevBtn) prevBtn.disabled = !infinite && index <= 0;
        if (nextBtn) nextBtn.disabled = !infinite && index >= max;
      }

      function prev() {
        goTo(index - 1);
      }
      function next() {
        goTo(index + 1);
      }

      if (prevBtn) prevBtn.addEventListener('click', prev);
      if (nextBtn) nextBtn.addEventListener('click', next);

      var ro = null;
      function onResize() {
        updateStyles();
        goTo(Math.min(index, maxIndex()));
      }
      if (typeof ResizeObserver !== 'undefined') {
        ro = new ResizeObserver(function() {
          requestAnimationFrame(onResize);
        });
        if (wrap) ro.observe(wrap);
      } else {
        window.addEventListener('resize', onResize);
      }

      updateStyles();
      goTo(0);
    }

    function initAll() {
      document.querySelectorAll('.product-carousel-bundles[data-section-id]').forEach(initBundlesCarousel);
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initAll);
    } else {
      initAll();
    }
    document.addEventListener('shopify:section:load', function(e) {
      var section = e.target.querySelector('.product-carousel-bundles');
      if (section) initBundlesCarousel(section);
    });
  })();
</script>
 
