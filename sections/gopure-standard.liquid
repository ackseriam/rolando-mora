<style>
  .gopure-standard {
    background: radial-gradient(85.62% 43.49% at 50% 35.24%, #fef7fa, #e3c9ff), #fef7fa;
    padding: 3rem 0 0;
    overflow: hidden;
  }

  @media (min-width: 990px) {
    .gopure-standard {
      padding: 4rem 0 0;
    }
  }

  .gopure-standard__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .gopure-standard__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    align-items: unset;
  }

  @media (min-width: 990px) {
    .gopure-standard__grid {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 1.5rem;
    }
  }

  /* COLUMN 1 — Stats */
  .gopure-standard__stats {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding-top: 0.7rem;
  }

  @media (min-width: 990px) {
    .gopure-standard__stats {
      padding-top: 1.25rem;
    }
  }

  .gopure-standard__badge {
    display: inline-block;
    background-color: {{ section.settings.badge_bg_color }};
    color: {{ section.settings.color_indigo }};
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 600;
    font-size: 0.75rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    padding: 0.35rem 1rem;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  .gopure-standard__heading {
    margin: 0 0 2rem;
  }

  .gopure-standard__heading-main {
    display: block;
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 1.5rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: {{ section.settings.color_indigo }};
    line-height: 1.2;
  }

  @media (min-width: 990px) {
    .gopure-standard__heading-main {
      font-size: 2rem;
    }
  }

  .gopure-standard__heading-italic {
    display: block;
    font-family: 'Playfair Display', Georgia, 'Times New Roman', serif;
    font-weight: 400;
    font-style: italic;
    font-size: 2rem;
    color: {{ section.settings.color_indigo }};
    line-height: 1.2;
  }

  @media (min-width: 990px) {
    .gopure-standard__heading-italic {
      font-size: 2.5rem;
    }
  }

  .gopure-standard__stat-list {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    width: 100%;
    max-width: 340px;
  }

  .gopure-standard__stat {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    text-align: left;
  }

  .gopure-standard__stat-icon {
    flex-shrink: 0;
    width: 43px;
    height: 41px;
    margin-top: 2px;
  }

  .gopure-standard__stat-text {
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .gopure-standard__stat-title {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 0.9375rem;
    text-transform: uppercase;
    color: {{ section.settings.color_indigo }};
    line-height: 1.3;
    letter-spacing: 0.02em;
  }

  .gopure-standard__stat-desc {
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-weight: 400;
    font-size: 0.875rem;
    color: {{ section.settings.color_indigo }};
    line-height: 1.4;
  }

  /* COLUMN 2 — Product Image */
  .gopure-standard__image {
    display: flex;
    justify-content: center;
    align-items: flex-end;
  }

  .gopure-standard__product-img {
    display: block;
    width: 271px;
    height: auto;
    object-fit: contain;
  }

  @media (min-width: 990px) {
    .gopure-standard__product-img {
      width: 400px;
    }
  }

  /* COLUMN 3 — Testing Card */
  .gopure-standard__card {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .gopure-standard__card-top {
    background-color: {{ section.settings.color_primary }};
    padding: 1.5rem 1.25rem;
  }

  .gopure-standard__card-heading {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 1.25rem;
    color: #ffffff;
    margin: 0 0 0.75rem;
    line-height: 1.3;
  }

  .gopure-standard__card-subtext {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 400;
    font-size: 0.875rem;
    color: #ffffff;
    margin: 0;
    line-height: 1.5;
  }

  .gopure-standard__card-bottom {
    background-color: #ffffff;
    padding: 1.25rem;
  }

  .gopure-standard__method {
    padding: 0.875rem 0;
    border-bottom: 1px solid #e8e4f0;
  }

  .gopure-standard__method:first-child {
    padding-top: 0;
  }

  .gopure-standard__method:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .gopure-standard__method-title {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 700;
    font-size: 0.8125rem;
    text-transform: uppercase;
    color: {{ section.settings.color_primary }};
    letter-spacing: 0.04em;
    margin: 0 0 0.2rem;
    line-height: 1.3;
  }

  .gopure-standard__method-desc {
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-weight: 400;
    font-size: 0.8125rem;
    color: #444444;
    margin: 0;
    line-height: 1.4;
  }

  .gopure-standard__highlight {
    background-color: {{ section.settings.badge_bg_color }};
    border-radius: 8px;
    padding: 1rem 1.25rem;
    margin-top: 1rem;
    text-align: center;
  }

  .gopure-standard__highlight p {
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-weight: 400;
    font-size: 0.8125rem;
    color: {{ section.settings.color_indigo }};
    line-height: 1.5;
    margin: 0;
  }

  .gopure-standard__highlight strong {
    font-weight: 700;
  }
</style>

