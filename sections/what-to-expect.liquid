<style>
  .what-to-expect {
    background-color: {{ section.settings.background_color }};
    padding: 3rem 1rem;
    font-family: 'Montserrat', sans-serif;
  }

  @media (min-width: 990px) {
    .what-to-expect {
      padding: 5rem 1rem;
    }
  }

  .what-to-expect__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .what-to-expect__heading {
    text-align: center;
    margin-bottom: 2.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  @media (min-width: 990px) {
    .what-to-expect__heading {
      margin-bottom: 4rem;
    }
  }

  .what-to-expect__heading-italic {
    font-family: 'Playfair Display', Georgia, 'Times New Roman', serif;
    font-weight: 400;
    font-style: italic;
    font-size: 1.8rem;
    line-height: 1.2;
    color: {{ section.settings.heading_color }};
    display: block;
    margin: 0;
  }

  @media (min-width: 990px) {
    .what-to-expect__heading-italic {
      font-size: 2.8rem;
    }
  }

  .what-to-expect__heading-main {
    font-family: 'Landour Regular Text', 'Landour', sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 2.2rem;
    line-height: 1.1;
    color: {{ section.settings.heading_color }};
    display: block;
    margin: 0;
    letter-spacing: 0.05em;
  }

  @media (min-width: 990px) {
    .what-to-expect__heading-main {
      font-size: 3.5rem;
    }
  }

  .what-to-expect__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 990px) {
    .what-to-expect__grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }
  }

  .what-to-expect__card {
    display: flex;
    flex-direction: row;
    background-color: #ffffff;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .what-to-expect__card-image {
    flex: 0 0 40%;
    max-width: 40%;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 990px) {
    .what-to-expect__card-image {
      flex: 0 0 45%;
      max-width: 45%;
    }
  }

  .what-to-expect__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    aspect-ratio: 543 / 876;
  }

  .what-to-expect__card-content {
    flex: 1;
    padding: 1.25rem 1.25rem 1.25rem 1rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.75rem;
  }

  @media (min-width: 990px) {
    .what-to-expect__card-content {
      padding: 1.5rem 2rem 1.5rem 1.5rem;
      gap: 1rem;
    }
  }

  .what-to-expect__badge {
    display: inline-block;
    background: linear-gradient(90deg, #c87bff, #785df8);
    color: white;
    font-family: 'Landour Regular Text', 'Landour', sans-serif;
    font-weight: 700;
    font-size: 0.7rem; 
    text-transform: uppercase;
    padding: 4px 14px;
    border-radius: 9999px;
    letter-spacing: 0.08em;
    align-self: flex-start;
  }

  .what-to-expect__bullets {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  @media (min-width: 990px) {
    .what-to-expect__bullets {
      gap: 0.75rem;
    }
  }

  .what-to-expect__bullet {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    font-family: 'Montserrat', sans-serif;
    font-size: 0.8rem;
    line-height: 1.45;
    color: {{ section.settings.text_color }};
    font-weight: 400;
  }

  @media (min-width: 990px) {
    .what-to-expect__bullet {
      font-size: 0.85rem;
    }
  }

  .what-to-expect__bullet-icon {
    flex-shrink: 0;
    width: 13px;
    height: 13px;
    margin-top: 3px;
    color: #ab35ff;
  }

  /* Mobile CTA */
  .what-to-expect__cta-wrapper {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  @media (min-width: 990px) {
    .what-to-expect__cta-wrapper {
      display: none;
    }
  }

  .what-to-expect__cta {
    display: inline-block;
    background-color: {{ section.settings.cta_bg_color }};
    color: #ffffff;
    font-family: 'Landour Regular Text', 'Landour', sans-serif;
    font-weight: 700;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 1rem 2.5rem;
    border-radius: 9999px;
    text-decoration: none;
    text-align: center;
    transition: opacity 0.2s ease;
    width: 100%;
    max-width: 420px;
    box-sizing: border-box;
  }

  .what-to-expect__cta:hover {
    opacity: 0.85;
  }
</style>

