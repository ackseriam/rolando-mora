{% comment %}
  Meet Our Dermatologists – replica of goPure Beauty homepage section
  Source: https://gopurebeauty.com
  Original: section with aria-label="Meet our dermatologists"
  Includes: heading with inline product image + dermatologist cards grid
{% endcomment %}

<style>
  /* =========================================================
     Meet Dermatologists Section – goPure Beauty
     Spacing: py-6xl / lg:py-7xl, mb-5xl / mb-6xl / lg:mb-7xl, px-md
     Typography: font-heading-secondary (script), font-2xl / font-3xl
     ========================================================= */

  .meet-dermatologists-wrapper {
    position: relative;
    text-align: center;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .meet-dermatologists-container {
    position: relative;
    text-align: center;
    margin-bottom: var(--margin-6xl, 5rem);
    padding-inline: var(--padding-md, 0.8rem);
    max-width: 1200px;
    margin-inline: auto;
  }

  @media (min-width: 992px) {
    .meet-dermatologists-container {
      margin-bottom: 5.5rem;
    }
  }

  .meet-dermatologists-heading {
    font-weight: 600;
    color: var(--color-black, #000000);
    margin-bottom: var(--margin-5xl, 3rem);
    line-height: 1;
    margin-top: 0;
  }

  @media (min-width: 992px) {
    .meet-dermatologists-heading {
      margin-bottom: 5rem;
    }
  }

  .meet-dermatologists-heading__line {
    display: block;
  }

  .meet-dermatologists-heading-with-image {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    gap: 0.5rem 0.75rem;
  }

  .meet-dermatologists-heading__script {
    font-family: var(--font-accent--family, 'Playfair Display', Georgia, serif);
    font-weight: 400;
    font-style: italic;
    font-size: var(--font-size--2xl, 1.5rem);
    line-height: 1;
    color: {{ section.settings.script_heading_color }};
  }

  @media (min-width: 992px) {
    .meet-dermatologists-heading__script {
      font-size: var(--font-size--3xl, 2rem);
    }
  }

  .meet-dermatologists-heading__image-wrap {
    display: inline-flex;
    align-items: center;
    vertical-align: middle;
  }

  .meet-dermatologists-heading__image-wrap--tilt {
    transform: rotate(-8deg);
  }

  .meet-dermatologists-heading__image-wrap--tilt-right {
    transform: rotate(6deg);
  }

  .meet-dermatologists-heading__inline-image {
    display: block;
    width: 90px;
    height: auto;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .meet-dermatologists-heading__inline-image {
      width: 132px;
    }
  }

  .meet-dermatologists-heading__bold {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 600;
    font-size: var(--font-size--2xl, 1.5rem);
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--color-black, #000000);
  }

  @media (min-width: 992px) {
    .meet-dermatologists-heading__bold {
      font-size: var(--font-size--3xl, 2rem);
    }
  }

  /* Grid of dermatologist cards */
  .meet-dermatologists-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--gap-2xl, 2rem);
    max-width: 1200px;
    margin: 0 auto;
    padding-inline: var(--padding-md, 0.8rem);
  }

  @media (min-width: 768px) {
    .meet-dermatologists-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media (min-width: 992px) {
    .meet-dermatologists-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .meet-dermatologists-card {
    background-color: {{ section.settings.card_background_color }};
    border-radius: var(--style-border-radius-lg, 1rem);
    overflow: visible;
    text-align: center;
    padding: 1.25rem 1.25rem 1.5rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
  }

  .meet-dermatologists-card__name-wrap {
    margin-bottom: 0.5rem;
  }

  .meet-dermatologists-card__image-wrap {
    position: relative;
    margin-bottom: 0;
    aspect-ratio: 16/10;
    overflow: hidden;
    border-radius: var(--style-border-radius-sm, 0.6rem);
  }

  .meet-dermatologists-card__play-overlay {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .meet-dermatologists-card__play-overlay svg {
    width: 14px;
    height: 14px;
    margin-left: 2px;
    fill: currentColor;
    color: #333;
  }

  .meet-dermatologists-card__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .meet-dermatologists-card__tag {
    display: inline-block;
    background-color: {{ section.settings.tag_background_color }};
    color: {{ section.settings.tag_text_color }};
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 600;
    font-size: 0.7rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    padding: 0.4rem 0.85rem;
    border-radius: 2px;
    margin-top: -0.75rem;
    position: relative;
    z-index: 1;
    margin-bottom: 0.75rem;
  }

  .meet-dermatologists-card__product-wrap {
    margin-bottom: 1rem;
  }

  .meet-dermatologists-card__product-wrap img {
    width: 90px;
    height: auto;
    margin: 0 auto;
    object-fit: contain;
  }

  .meet-dermatologists-card__name {
    font-family: var(--font-heading--family, 'Montserrat', sans-serif);
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-black, #000000);
    margin: 0 0 0.25rem;
    line-height: 1.2;
  }

  .meet-dermatologists-card__credentials {
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-weight: 400;
    font-size: 0.8125rem;
    color: var(--color-foreground, #555);
    margin: 0 0 0.75rem;
    line-height: 1.4;
  }

  .meet-dermatologists-card__category {
    display: none;
  }

  .meet-dermatologists-card__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.35rem;
    padding: 0;
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-size: 0.8125rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    text-decoration: none;
    border: none;
    background: none;
    color: {{ section.settings.cta_link_color }};
    transition: color 0.2s ease, opacity 0.2s ease;
  }

  .meet-dermatologists-card__cta:hover {
    color: {{ section.settings.cta_link_hover_color }};
    opacity: 0.9;
  }

  .meet-dermatologists-card__cta-arrow {
    display: inline-block;
    width: 0.4em;
    height: 0.4em;
    border-right: 2px solid currentColor;
    border-top: 2px solid currentColor;
    transform: rotate(45deg);
    margin-left: 2px;
  }

  .meet-dermatologists-card__bio {
    font-family: var(--font-body--family, 'Montserrat', sans-serif);
    font-size: 0.9375rem;
    line-height: 1.5;
    color: var(--color-foreground, #333);
    margin: 0 1rem 1rem;
    text-align: center;
  }

  .meet-dermatologists-card__bio p {
    margin: 0 0 0.5em;
  }

  .meet-dermatologists-card__bio p:last-child {
    margin-bottom: 0;
  }
</style>

<section
  class="meet-dermatologists-wrapper"
  data-section-id="{{ section.id }}"
  aria-label="{{ section.settings.aria_label | default: 'Meet our dermatologists' | escape }}"
>
  <div class="meet-dermatologists-container">
    {%- if section.settings.script_heading != blank or section.settings.bold_heading != blank or section.settings.product_image != blank or section.settings.product_image_2 != blank -%}
      <h2 class="meet-dermatologists-heading">
        <span class="meet-dermatologists-heading-with-image">
          {%- if section.settings.product_image != blank -%}
            <span class="meet-dermatologists-heading__image-wrap meet-dermatologists-heading__image-wrap--tilt" aria-hidden="true">
              <img
                class="meet-dermatologists-heading__inline-image"
                src="{{ section.settings.product_image | image_url: width: 264 }}"
                srcset="{{ section.settings.product_image | image_url: width: 180 }} 180w,
                        {{ section.settings.product_image | image_url: width: 264 }} 264w"
                alt=""
                width="132"
                height="80"
                sizes="(max-width: 767px) 90px, 132px"
                loading="eager"
              >
            </span>
          {%- endif -%}

          {%- if section.settings.script_heading != blank -%}
            <span class="meet-dermatologists-heading__line meet-dermatologists-heading__script">
              {{ section.settings.script_heading | escape }}
              {%- if section.settings.heading_line_break -%}<br>{%- endif -%}
            </span>
          {%- endif -%}

          {%- if section.settings.product_image_2 != blank -%}
            <span class="meet-dermatologists-heading__image-wrap meet-dermatologists-heading__image-wrap--tilt-right" aria-hidden="true">
              <img
                class="meet-dermatologists-heading__inline-image"
                src="{{ section.settings.product_image_2 | image_url: width: 264 }}"
                srcset="{{ section.settings.product_image_2 | image_url: width: 180 }} 180w,
                        {{ section.settings.product_image_2 | image_url: width: 264 }} 264w"
                alt=""
                width="132"
                height="80"
                sizes="(max-width: 767px) 90px, 132px"
                loading="eager"
              >
            </span>
          {%- endif -%}

          {%- if section.settings.bold_heading != blank -%}
            <span class="meet-dermatologists-heading__line meet-dermatologists-heading__bold">
              {{ section.settings.bold_heading | escape }}
            </span>
          {%- endif -%}
        </span>
      </h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="meet-dermatologists-grid">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'dermatologist' -%}
              <div class="meet-dermatologists-card" {{ block.shopify_attributes }}>
                <div class="meet-dermatologists-card__name-wrap">
                  {%- if block.settings.name != blank -%}
                    <h3 class="meet-dermatologists-card__name">{{ block.settings.name | escape }}</h3>
                  {%- endif -%}
                  {%- if block.settings.credentials != blank -%}
                    <p class="meet-dermatologists-card__credentials">{{ block.settings.credentials | escape }}</p>
                  {%- endif -%}
                </div>

                {%- if block.settings.image != blank -%}
                  <div class="meet-dermatologists-card__image-wrap">
                    <span class="meet-dermatologists-card__play-overlay" aria-hidden="true">
                      <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M8 5v14l11-7z"/></svg>
                    </span>
                    <img
                      class="meet-dermatologists-card__image"
                      src="{{ block.settings.image | image_url: width: 600 }}"
                      alt="{{ block.settings.name | escape }}"
                      width="400"
                      height="250"
                      loading="lazy"
                      srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                              {{ block.settings.image | image_url: width: 600 }} 600w"
                      sizes="(max-width: 767px) 100vw, 33vw"
                    >
                  </div>
                {%- endif -%}

                {%- if block.settings.category != blank -%}
                  <span class="meet-dermatologists-card__tag">{{ block.settings.category | escape }}</span>
                {%- endif -%}

                {%- if block.settings.product_image != blank -%}
                  <div class="meet-dermatologists-card__product-wrap">
                    <img
                      src="{{ block.settings.product_image | image_url: width: 128 }}"
                      alt=""
                      width="64"
                      height="64"
                      loading="lazy"
                    >
                  </div>
                {%- endif -%}

                {%- if block.settings.bio != blank -%}
                  <div class="meet-dermatologists-card__bio rte">
                    {{ block.settings.bio }}
                  </div>
                {%- endif -%}

                {%- if block.settings.cta_text != blank and block.settings.cta_url != blank -%}
                  <a href="{{ block.settings.cta_url }}" class="meet-dermatologists-card__cta">
                    {{ block.settings.cta_text | escape }}<span class="meet-dermatologists-card__cta-arrow" aria-hidden="true"></span>
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

