<style>
  /* =========================================================
     Hero Banner Section – exact replica of goPure Beauty
     Source:  https://gopurebeauty.com
     Original: <section class="_wrapper_2gmz6_1" data-testid="hero-banner">
     ========================================================= */

  /* ── Section wrapper ─────────────────────────────────── */
  .hero-banner-section {
    position: relative;
    display: block;
    width: 100%;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }

  /* ── Media container  (_media_2gmz6_9) ──────────────── */
  .hero-banner-media {
    display: block;
    width: 100%;
    line-height: 0; /* kill inline-block gap */
  }

  .hero-banner-media picture {
    display: block;
    width: 100%;
  }

  /* Mobile image fills full width; desktop shows separate landscape image */
  .hero-banner-media img.fill {
    display: block;
    width: 100%;
    height: auto;
    object-fit: cover;
    object-position: center center;
  }

  /* ── Header / content overlay (_header_p5roc_1) ─────── */
  /*
   * The original uses absolute positioning so the text/CTA sits
   * over the hero image.  On mobile the content sits below the image
   * in a stacked layout; on desktop it overlays at the image center.
   */
  .hero-banner-header {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 32px 24px 40px;
    z-index: 2;
    background-color: {{ section.settings.header_background_color }};
  }

  /* ── Headlines container (_container_64vy8_1) ──────── */
  /*
   * The _reverse_64vy8_5 class applies flex-direction: column-reverse
   * so that although the subtitle span comes first in the DOM,
   * the title appears on top visually and the subtitle below.
   */
  .hero-banner-headlines {
    display: inline-flex;
    flex-direction: column-reverse; /* _reverse_64vy8_5 */
    align-items: center;
    gap: 4px;
    margin-bottom: 24px;
  }

  /* ── Subtitle (_subtitle_64vy8_22) ──────────────────── */
  /* font-heading-secondary italic weight-400 text-center */
  .hero-banner-subtitle {
    display: block;
    font-family: var(--font-accent--family, Georgia, serif);
    font-style: italic;
    font-weight: 400;
    font-size: 18px;
    line-height: 1.3;
    letter-spacing: 0.01em;
    color: {{ section.settings.subtitle_color }};
    text-align: center;
  }

  /* ── Title (_title_64vy8_9) ─────────────────────────── */
  /* font-heading weight-600 uppercase text-center */
  .hero-banner-title {
    display: block;
    font-family: var(--font-heading--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-style: normal;
    font-weight: 600;
    font-size: 36px;
    line-height: 1.1;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: {{ section.settings.title_color }};
    text-align: center;
  }

  /* ── CTA button (_link_p5roc_27) ─────────────────────── */
  /* Uses existing theme classes btn btn--secondary */
  .hero-banner-cta-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    text-decoration: none;
    border: 2px solid {{ section.settings.cta_border_color }};
    color: {{ section.settings.cta_text_color }};
    background-color: {{ section.settings.cta_background_color }};
    border-radius: 2px;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
    position: relative;
    z-index: 3;
  }

  .hero-banner-cta-btn:hover {
    background-color: {{ section.settings.cta_hover_background_color }};
    color: {{ section.settings.cta_hover_text_color }};
    border-color: {{ section.settings.cta_hover_background_color }};
  }

  /* ── Header overlay link (_headerOverlay_p5roc_68) ──── */
  /* Transparent full-header clickable overlay */
  .hero-banner-header-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    display: block;
    cursor: pointer;
  }

  /* ── Target retail badge (_targetBadge_p5roc_44) ─────── */
  .hero-banner-target-badge {
    position: absolute;
    bottom: 24px;
    right: 24px;
    z-index: 4;
    max-width: 120px;
    line-height: 0;
  }

  .hero-banner-target-badge img {
    display: block;
    width: 100%;
    height: auto;
  }

  /* ── Full-section overlay link (_overlay_p5roc_67) ───── */
  .hero-banner-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    display: block;
    cursor: pointer;
  }

  /* ── Desktop layout (≥ 992px) ────────────────────────── */
  /*
   * On desktop the image fills the full section and the header
   * is absolutely positioned in the lower-center of the image.
   */
  @media screen and (min-width: 992px) {
    .hero-banner-section {
      min-height: 560px;
    }

    .hero-banner-media img.fill {
      height: 100%;
      min-height: 560px;
    }

    .hero-banner-header {
      position: absolute;
      inset: auto 0 0;
      padding: 48px 40px 56px;
      background-color: transparent;
    }

    .hero-banner-subtitle {
      font-size: 22px;
    }

    .hero-banner-title {
      font-size: 52px;
    }

    .hero-banner-target-badge {
      bottom: 32px;
      right: 32px;
      max-width: 160px;
    }
  }

  /* ── Large desktop (≥ 1280px) ───────────────────────── */
  @media screen and (min-width: 1280px) {
    .hero-banner-title {
      font-size: 64px;
    }

    .hero-banner-subtitle {
      font-size: 26px;
    }
  }
</style>

{%- comment -%}
  ============================================================
  Hero Banner Section – goPure Beauty replica
  Original: <section class="_wrapper_2gmz6_1" data-testid="hero-banner">

  Actual source content:
    Subtitle : "Bikini season is coming."
    Title    : "WILL YOU BE READY?"
    CTA      : "SHOP BELLY CREAM" → /products/tighten-smooth-belly-cream
    Badge    : "Now at Target" logo
    Desktop img : gopure-tighten-smooth-belly-cream-skincare-product.png
    Mobile img  : gopure-tighten-smooth-belly-cream_c573eb85-fe04-45a4-85c8-aa177bf0b222.png
  ============================================================
{%- endcomment -%}

{%- liquid
  assign cta_url   = section.settings.cta_link   | default: '/products/tighten-smooth-belly-cream'
  assign cta_label = section.settings.cta_text   | default: 'SHOP BELLY CREAM'
  assign cta_aria  = section.settings.cta_aria_label | default: 'Shop Tighten & Smooth Belly Cream'
-%}

<section
  class="hero-banner-section"
  data-section-id="{{ section.id }}"
  data-testid="hero-banner"
>

  {%- comment -%} ── Media (_media_2gmz6_9) ──────────────── {%- endcomment -%}
  <div class="hero-banner-media">
    <picture>
      {%- comment -%} Desktop image source (min-width: 992px) {%- endcomment -%}
      {%- if section.settings.image_desktop != blank -%}
        <source
          media="(min-width: 992px)"
          srcset="{{ section.settings.image_desktop | image_url: width: 2000 }}"
        >
      {%- else -%}
        <source
          media="(min-width: 992px)"
          srcset="{{ 'gopure-tighten-smooth-belly-cream-skincare-product.png' | file_url }}"
        >
      {%- endif -%}

      {%- comment -%} Mobile image (default src with WebP srcset) {%- endcomment -%}
      {%- if section.settings.image_mobile != blank -%}
        <img
          src="{{ section.settings.image_mobile | image_url: width: 800 }}"
          srcset="
            {{ section.settings.image_mobile | image_url: width: 100  }} 100w,
            {{ section.settings.image_mobile | image_url: width: 200  }} 200w,
            {{ section.settings.image_mobile | image_url: width: 400  }} 400w,
            {{ section.settings.image_mobile | image_url: width: 600  }} 600w,
            {{ section.settings.image_mobile | image_url: width: 800  }} 800w,
            {{ section.settings.image_mobile | image_url: width: 1000 }} 1000w,
            {{ section.settings.image_mobile | image_url: width: 1200 }} 1200w,
            {{ section.settings.image_mobile | image_url: width: 1400 }} 1400w
          "
          sizes="(min-width: 992px) 52vw, 100vw"
          alt="{{ section.settings.image_alt | escape }}"
          width="{{ section.settings.image_mobile.width }}"
          height="{{ section.settings.image_mobile.height }}"
          class="fill"
          loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
          decoding="async"
          fetchpriority="{% if section.index == 1 %}high{% else %}auto{% endif %}"
        >
      {%- elsif section.settings.image_desktop != blank -%}
        <img
          src="{{ section.settings.image_desktop | image_url: width: 1400 }}"
          srcset="
            {{ section.settings.image_desktop | image_url: width: 600  }} 600w,
            {{ section.settings.image_desktop | image_url: width: 1000 }} 1000w,
            {{ section.settings.image_desktop | image_url: width: 1400 }} 1400w,
            {{ section.settings.image_desktop | image_url: width: 2000 }} 2000w
          "
          sizes="100vw"
          alt="{{ section.settings.image_alt | escape }}"
          width="{{ section.settings.image_desktop.width }}"
          height="{{ section.settings.image_desktop.height }}"
          class="fill"
          loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
          decoding="async"
          fetchpriority="{% if section.index == 1 %}high{% else %}auto{% endif %}"
        >
      {%- else -%}
        {{ 'product-1' | placeholder_svg_tag: 'fill' }}
      {%- endif -%}
    </picture>
  </div>
  {%- comment -%} /.hero-banner-media {%- endcomment -%}

  {%- comment -%} ── Header (_header_p5roc_1) ─────────────── {%- endcomment -%}
  <header class="hero-banner-header" data-testid="hero-header">

    {%- comment -%}
      Headlines container (_container_64vy8_1 _isTwoLines_64vy8_17 _reverse_64vy8_5)
      CSS flex-direction: column-reverse → title (DOM: last) appears on top visually,
      subtitle (DOM: first) appears below.
    {%- endcomment -%}
    <span class="hero-banner-headlines" data-testid="hero-headlines">
      <span class="hero-banner-subtitle">
        {{- section.settings.subtitle | default: 'Bikini season is coming.' | escape -}}
      </span>
      <br>
      <span class="hero-banner-title">
        {{- section.settings.title | default: 'WILL YOU BE READY?' | escape -}}
      </span>
    </span>

    <a
      class="hero-banner-cta-btn btn btn--secondary"
      data-testid="hero-cta-button"
      href="{{ cta_url }}"
    >
      {{- cta_label | escape -}}
    </a>

    {%- comment -%} Transparent overlay that makes the entire header clickable {%- endcomment -%}
    <a
      class="hero-banner-header-overlay"
      aria-label="{{ cta_aria | escape }}"
      href="{{ cta_url }}"
      tabindex="-1"
    ></a>

  </header>
  {%- comment -%} /.hero-banner-header {%- endcomment -%}

  {%- comment -%} ── Target retail badge (_targetBadge_p5roc_44) ─── {%- endcomment -%}
  {%- if section.settings.show_retail_badge -%}
    <div class="hero-banner-target-badge" data-testid="hero-target-badge">
      {%- if section.settings.retail_badge_image != blank -%}
        <img
          src="{{ section.settings.retail_badge_image | image_url: width: 320 }}"
          srcset="
            {{ section.settings.retail_badge_image | image_url: width: 100 }} 100w,
            {{ section.settings.retail_badge_image | image_url: width: 200 }} 200w,
            {{ section.settings.retail_badge_image | image_url: width: 320 }} 320w
          "
          alt="{{ section.settings.retail_badge_alt | default: 'Now at Target' | escape }}"
          width="160"
          height="40"
          loading="lazy"
        >
      {%- else -%}
        {%- comment -%} Fallback: reference the CDN file by name if uploaded to theme assets {%- endcomment -%}
        <img
          src="{{ 'now-at-target-logo.png' | file_url }}"
          alt="Now at Target"
          width="160"
          height="40"
          loading="lazy"
        >
      {%- endif -%}
    </div>
  {%- endif -%}

  {%- comment -%} ── Full-section overlay link (_overlay_p5roc_67) ── {%- endcomment -%}
  <a
    class="hero-banner-overlay"
    aria-label="{{ cta_aria | escape }}"
    href="{{ cta_url }}"
    tabindex="-1"
  ></a>

</section>

