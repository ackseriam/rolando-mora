<style>
  /* =========================================================
     Hero Banner Section – goPure Beauty replica
     Source: https://gopurebeauty.com (data-testid="hero-banner")
     Original wrapper class: _wrapper_2gmz6_1
     ========================================================= */

  .hero-banner-section {
    width: 100%;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }

  /* Container: two-column on desktop, single column on mobile */
  .hero-banner-container {
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
  }

  /* ── Media column ─────────────────────────────────────── */
  .hero-banner-media {
    position: relative;
    width: 100%;
    overflow: hidden;
    order: 1; /* image first on mobile */
  }

  .hero-banner-media picture {
    display: block;
    width: 100%;
    height: 100%;
  }

  .hero-banner-media img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
  }

  /* ── Content column ───────────────────────────────────── */
  .hero-banner-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px 24px 48px;
    order: 2;
    gap: 0;
  }

  /* ── Eyebrow / tag label above heading ──────────────── */
  .hero-banner-eyebrow {
    display: inline-block;
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: {{ section.settings.eyebrow_color }};
    margin-bottom: 12px;
  }

  /* ── Heading ────────────────────────────────────────── */
  .hero-banner-heading {
    font-family: var(--font-heading--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 32px;
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.01em;
    color: {{ section.settings.heading_color }};
    margin: 0 0 16px;
  }

  /* ── Subheading ─────────────────────────────────────── */
  .hero-banner-subheading {
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 15px;
    font-weight: 400;
    line-height: 1.6;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 24px;
  }

  /* ── Price block ────────────────────────────────────── */
  .hero-banner-price {
    display: flex;
    align-items: baseline;
    gap: 6px;
    margin-bottom: 28px;
  }

  .hero-banner-price .price-label {
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 14px;
    font-weight: 400;
    color: {{ section.settings.subheading_color }};
  }

  .hero-banner-price .price-amount {
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 22px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
  }

  /* ── CTA buttons ────────────────────────────────────── */
  .hero-banner-cta {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin-bottom: 32px;
    width: 100%;
  }

  .hero-banner-cta .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 16px 24px;
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 15px;
    font-weight: 700;
    letter-spacing: 0.04em;
    text-decoration: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease, transform 0.15s ease;
    text-align: center;
    white-space: nowrap;
  }

  .hero-banner-cta .btn:hover {
    transform: translateY(-1px);
  }

  .hero-banner-cta .btn-primary {
    background-color: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_text_color }};
    border: 2px solid {{ section.settings.primary_button_bg }};
  }

  .hero-banner-cta .btn-primary:hover {
    background-color: {{ section.settings.primary_button_hover_bg }};
    border-color: {{ section.settings.primary_button_hover_bg }};
  }

  .hero-banner-cta .btn-secondary {
    background-color: transparent;
    color: {{ section.settings.secondary_button_text_color }};
    border: 2px solid {{ section.settings.secondary_button_border_color }};
  }

  .hero-banner-cta .btn-secondary:hover {
    background-color: {{ section.settings.secondary_button_hover_bg }};
    color: {{ section.settings.primary_button_text_color }};
    border-color: {{ section.settings.secondary_button_hover_bg }};
  }

  /* ── Trust badges ───────────────────────────────────── */
  .hero-banner-badges {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 16px 20px;
    padding-top: 4px;
  }

  .hero-banner-badges .badge-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    text-align: center;
  }

  .hero-banner-badges .badge-item img {
    width: 36px;
    height: 36px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .hero-banner-badges .badge-item span {
    font-family: var(--font-body--family, 'Helvetica Neue', Helvetica, Arial, sans-serif);
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: {{ section.settings.badge_text_color }};
    line-height: 1.3;
    max-width: 64px;
  }

  /* ── Animations ─────────────────────────────────────── */
  @keyframes hb-fadeInUp {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes hb-fadeIn {
    from { opacity: 0; }
    to   { opacity: 1; }
  }

  .hero-banner-section[data-animate="true"] .hero-banner-media {
    animation: hb-fadeIn 0.7s ease forwards;
  }

  .hero-banner-section[data-animate="true"] .hero-banner-eyebrow {
    animation: hb-fadeInUp 0.5s ease 0.1s both;
  }

  .hero-banner-section[data-animate="true"] .hero-banner-heading {
    animation: hb-fadeInUp 0.5s ease 0.2s both;
  }

  .hero-banner-section[data-animate="true"] .hero-banner-subheading {
    animation: hb-fadeInUp 0.5s ease 0.3s both;
  }

  .hero-banner-section[data-animate="true"] .hero-banner-price {
    animation: hb-fadeInUp 0.5s ease 0.35s both;
  }

  .hero-banner-section[data-animate="true"] .hero-banner-cta {
    animation: hb-fadeInUp 0.5s ease 0.4s both;
  }

  .hero-banner-section[data-animate="true"] .hero-banner-badges {
    animation: hb-fadeInUp 0.5s ease 0.5s both;
  }

  /* ── Responsive: Desktop (≥ 992px) ─────────────────── */
  @media screen and (min-width: 992px) {
    .hero-banner-container {
      flex-direction: row;
      min-height: 600px;
      align-items: stretch;
    }

    /* Image on the left */
    .hero-banner-media {
      order: {{ section.settings.image_position == 'right' ? '2' : '1' }};
      flex: 0 0 52%;
      max-width: 52%;
    }

    .hero-banner-media img {
      height: 100%;
    }

    /* Content on the right */
    .hero-banner-content {
      order: {{ section.settings.image_position == 'right' ? '1' : '2' }};
      flex: 0 0 48%;
      max-width: 48%;
      padding: 60px 56px 60px 48px;
      align-items: flex-start;
    }

    .hero-banner-heading {
      font-size: 42px;
      margin-bottom: 20px;
    }

    .hero-banner-subheading {
      font-size: 16px;
      margin-bottom: 28px;
    }

    .hero-banner-cta {
      flex-direction: row;
      width: auto;
    }

    .hero-banner-cta .btn {
      width: auto;
      min-width: 180px;
    }

    .hero-banner-badges .badge-item {
      flex-direction: row;
      text-align: left;
      align-items: center;
      gap: 8px;
    }

    .hero-banner-badges .badge-item span {
      max-width: none;
      font-size: 11px;
    }
  }

  /* ── Responsive: Large desktop (≥ 1280px) ───────────── */
  @media screen and (min-width: 1280px) {
    .hero-banner-heading {
      font-size: 52px;
    }

    .hero-banner-content {
      padding: 80px 80px 80px 64px;
    }
  }
</style>

{%- comment -%} =============================================
  Hero Banner Section
  Replicates: <section class="_wrapper_2gmz6_1" data-testid="hero-banner">
  Source: https://gopurebeauty.com
============================================= {%- endcomment -%}

<section
  class="hero-banner-section"
  data-section-id="{{ section.id }}"
  data-testid="hero-banner"
  data-animate="true"
>
  <div class="hero-banner-container">

    {%- comment -%} ── Media Column ────────────────────────── {%- endcomment -%}
    <div class="hero-banner-media">
      <picture>
        {%- if section.settings.image_desktop != blank -%}
          <source
            media="(min-width: 992px)"
            srcset="{{ section.settings.image_desktop | image_url: width: 1400 }} 1400w, {{ section.settings.image_desktop | image_url: width: 1800 }} 1800w"
            sizes="(min-width: 1280px) 748px, (min-width: 992px) 52vw, 100vw"
          >
        {%- endif -%}

        {%- if section.settings.image_mobile != blank -%}
          <img
            src="{{ section.settings.image_mobile | image_url: width: 800 }}"
            srcset="{{ section.settings.image_mobile | image_url: width: 480 }} 480w, {{ section.settings.image_mobile | image_url: width: 800 }} 800w"
            sizes="100vw"
            alt="{{ section.settings.image_alt | escape }}"
            loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
            fetchpriority="{% if section.index == 1 %}high{% else %}auto{% endif %}"
            width="{{ section.settings.image_mobile.width }}"
            height="{{ section.settings.image_mobile.height }}"
          >
        {%- elsif section.settings.image_desktop != blank -%}
          <img
            src="{{ section.settings.image_desktop | image_url: width: 800 }}"
            srcset="{{ section.settings.image_desktop | image_url: width: 480 }} 480w, {{ section.settings.image_desktop | image_url: width: 800 }} 800w, {{ section.settings.image_desktop | image_url: width: 1400 }} 1400w"
            sizes="(min-width: 992px) 52vw, 100vw"
            alt="{{ section.settings.image_alt | escape }}"
            loading="{% if section.index == 1 %}eager{% else %}lazy{% endif %}"
            fetchpriority="{% if section.index == 1 %}high{% else %}auto{% endif %}"
            width="{{ section.settings.image_desktop.width }}"
            height="{{ section.settings.image_desktop.height }}"
          >
        {%- else -%}
          {{ 'product-1' | placeholder_svg_tag: 'hero-banner-placeholder' }}
        {%- endif -%}
      </picture>
    </div>

    {%- comment -%} ── Content Column ──────────────────────── {%- endcomment -%}
    <div class="hero-banner-content">

      {%- if section.settings.eyebrow != blank -%}
        <p class="hero-banner-eyebrow">{{ section.settings.eyebrow | escape }}</p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="hero-banner-heading">{{ section.settings.heading }}</h1>
      {%- endif -%}

      {%- if section.settings.subheading != blank -%}
        <p class="hero-banner-subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}

      {%- if section.settings.price != blank -%}
        <div class="hero-banner-price">
          {%- if section.settings.price_label != blank -%}
            <span class="price-label">{{ section.settings.price_label | escape }}</span>
          {%- endif -%}
          <span class="price-amount">{{ section.settings.price | escape }}</span>
        </div>
      {%- endif -%}

      {%- comment -%} ── CTA Buttons ─────────────────────── {%- endcomment -%}
      <div class="hero-banner-cta">
        {%- if section.settings.primary_button_text != blank -%}
          <a
            href="{{ section.settings.primary_button_link | default: '#' }}"
            class="btn btn-primary"
            {%- if section.settings.primary_button_new_tab %} target="_blank" rel="noopener noreferrer"{%- endif -%}
          >
            {{- section.settings.primary_button_text | escape -}}
          </a>
        {%- endif -%}

        {%- if section.settings.secondary_button_text != blank -%}
          <a
            href="{{ section.settings.secondary_button_link | default: '#' }}"
            class="btn btn-secondary"
            {%- if section.settings.secondary_button_new_tab %} target="_blank" rel="noopener noreferrer"{%- endif -%}
          >
            {{- section.settings.secondary_button_text | escape -}}
          </a>
        {%- endif -%}
      </div>

      {%- comment -%} ── Trust Badges ────────────────────── {%- endcomment -%}
      {%- if section.blocks.size > 0 -%}
        <div class="hero-banner-badges">
          {%- for block in section.blocks -%}
            {%- if block.type == 'badge' -%}
              <div class="badge-item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <img
                    src="{{ block.settings.icon | image_url: width: 72 }}"
                    alt="{{ block.settings.text | escape }}"
                    width="36"
                    height="36"
                    loading="lazy"
                  >
                {%- elsif block.settings.icon_svg != blank -%}
                  <span class="badge-item__svg-icon" aria-hidden="true">
                    {{- block.settings.icon_svg -}}
                  </span>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <span>{{ block.settings.text | escape }}</span>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      {%- endif -%}

    </div>
    {%- comment -%} /.hero-banner-content {%- endcomment -%}

  </div>
  {%- comment -%} /.hero-banner-container {%- endcomment -%}
</section>

